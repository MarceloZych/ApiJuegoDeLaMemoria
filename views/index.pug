doctype html
html
  head
    link(href='style.css' rel='stylesheet')
    script(src='script.js')
    title= title
  body
    h1= message
    .container
      each pj in personajes
        .card
            img.card-img(data-image=pj.image, data-status=pj.estado, src=pj.estado == 'tapada' ? 'img/images.jpg' : pj.image)
            h6.name-char #{pj.name}
            p #{pj.house}